{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "jsx-quotes": [
            "error",
            "prefer-single"
        ],
        "space-before-function-paren": "off",
        "react/jsx-max-props-per-line": [
            "error",
            {
                "maximum": 2
            }
        ],
        "react/prop-types": "off"
    }
}